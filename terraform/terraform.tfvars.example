# Goud Chain Terraform Variables Template
# Copy this file to terraform.tfvars and fill in your values
# NEVER commit terraform.tfvars to version control!

# Oracle Cloud credentials
tenancy_ocid     = "ocid1.tenancy.oc1..aaaaaaaaXXXXXXXXXXXXXXXXXXXX"
user_ocid        = "ocid1.user.oc1..aaaaaaaaXXXXXXXXXXXXXXXXXXXX"
fingerprint      = "aa:bb:cc:dd:ee:ff:00:11:22:33:44:55:66:77:88:99"
private_key_path = "~/.oci/oci_api_key.pem"
region           = "us-ashburn-1"

# Optional: Use a specific compartment (defaults to tenancy root)
# compartment_ocid = "ocid1.compartment.oc1..aaaaaaaaXXXXXXXXXXXXXXXXXXXX"

# Environment configuration
environment = "free-tier"

# Infrastructure sizing
blockchain_node_count = 4
instance_shape        = "VM.Standard.A1.Flex"  # Free tier ARM
instance_ocpus        = 1                       # 1 OCPU per VM (4 total)
instance_memory_gb    = 6                       # 6 GB per VM (24 GB total)
block_volume_size_gb  = 50                      # 50 GB per node (200 GB total)

# SSH access
ssh_public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAABAQC... your-email@example.com"

# Security - IMPORTANT: Restrict these in production!
allowed_ssh_cidrs  = ["0.0.0.0/0"]  # Allow SSH from anywhere (change this!)
allowed_http_cidrs = ["0.0.0.0/0"]  # Allow HTTP from anywhere

# Optional features
enable_monitoring = false  # Set to true for Prometheus/Grafana
enable_redis      = true   # Enable Redis cache

# Backup configuration
backup_retention_days = 7

# Tags
tags = {
  Project     = "goud-chain"
  ManagedBy   = "terraform"
  Repository  = "https://github.com/your-username/goud_chain"
  Owner       = "your-email@example.com"
}
